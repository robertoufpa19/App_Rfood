<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.NovoProdutoEmpresaActivity">

    <include
        android:id="@+id/include"
        layout="@layout/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/textView7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Escolha uma foto"
            android:textColor="@color/ic_logo_rfood_background" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imagePerfilProduto"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:src="@drawable/perfil" />

        <EditText
            android:id="@+id/nomeNovoProduto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_edit_text"
            android:ems="10"
            android:hint="Nome produto"
            android:inputType="text"
            android:padding="16dp"
            android:textColor="#000000"
            android:textColorHighlight="#151515"
            android:textColorHint="@color/ic_logo_rfood_background"
            android:textColorLink="#090909" />

        <EditText
            android:id="@+id/editDescricaoNovoProduto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="-2dp"
            android:background="@drawable/bg_edit_text"
            android:ems="10"
            android:hint="Descricao"
            android:inputType="text"
            android:padding="16dp"
            android:textColor="#000000"
            android:textColorHighlight="#020202"
            android:textColorHint="@color/ic_logo_rfood_background"
            android:textColorLink="#040404" />

        <EditText
            android:id="@+id/editPrecoNovoProduto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="-2dp"
            android:background="@drawable/bg_edit_text"
            android:ems="10"
            android:hint="Preco"
            android:inputType="numberDecimal"
            android:padding="16dp"
            android:textColor="#000000"
            android:textColorHighlight="#020202"
            android:textColorHint="@color/ic_logo_rfood_background"
            android:textColorLink="#040404" />



        <Button
            android:id="@+id/buttonAcesso2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/fundo_botao"
            android:padding="16dp"
            android:textColor="#000000"
            android:layout_gravity="center_horizontal"
            android:onClick="validarDadosProduto"
            android:text="Salvar" />

    </LinearLayout>

</LinearLayout>